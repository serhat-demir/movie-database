<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Button" parent="">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="shapeAppearanceOverlay">@style/roundedCorners</item>
    </style>

    <style name="ButtonSmall" parent="Button">
        <item name="android:textSize">15sp</item>
        <item name="android:insetTop">4dp</item>
        <item name="android:insetBottom">4dp</item>
    </style>

    <style name="roundedCorners">
        <item name="cornerSize">8dp</item>
    </style>
</resources>